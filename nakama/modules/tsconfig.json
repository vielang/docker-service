{
  "compilerOptions": {
    "target": "ES2020",
    "module": "None",
    "lib": ["ES2020"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": false,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "types": ["node"],
    "alwaysStrict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
